{
   "compilerOptions": {
      "module":"NodeNext",
      "moduleResolution": "NodeNext",
      "target": "es5",
      "baseUrl": "src",
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true ,
      "esModuleInterop": true ,
      "forceConsistentCasingInFileNames": true,
      "noImplicitAny": true,
      "skipLibCheck": true 
   },
   "include": ["src/**/*"]
}